ghost_atom_dict = {}
ghost_atom_list = []
for model_name, model in MODELS.items():
    with project.group(model_name, "ghost-atom"):
        ga = mlipx.GhostAtomBenchmark(
                model=model,
                model_name=model_name,
        )
        ghost_atom_dict[model_name] = ga
        ghost_atom_list.append(ga)
    

{% if standalone %}
project.build()
{% endif %}