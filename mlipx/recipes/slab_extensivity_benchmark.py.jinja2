slab_dict = {}
slab_list = []
for model_name, model in MODELS.items():
    with project.group(model_name, "slab-extensivity"):
        slab = mlipx.SlabExtensivityBenchmark(
                model=model,
                model_name=model_name,
        )
        slab_dict[model_name] = slab
        slab_list.append(slab)
    

